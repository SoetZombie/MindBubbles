@model MindBubbles3.Models.InputStringModel

@{
    ViewBag.Title = "InputSource";
}

<body class="col-lg-12">
    @if (TempData["ErrorMessage"] != null)
    {
        <p class="alert alert-danger" id="successMessage">@TempData["ErrorMessage"]</p>
    }
    <h2>Prosím vložte text k předělání do bublin</h2>

    @using (Html.BeginForm("BubbleCreate", "BubbleCreate", FormMethod.Post))

    {
        // @Html.AntiForgeryToken()
        // @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.TextAreaFor(model => model.InputString, 10, 40, new { @class = "form-control form-control-lg" })
        </div>
        <label class="label-default">Včetně třetí úrovně? </label>
        <div class="form-group">@Html.CheckBoxFor(model => model.ThirdLevel)</div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Submit" />
        </div>
        @Html.ActionLink("Click here to download sample xlsx", "DownloadXLSM", null, new { @class = "btn btn-success" });

    }

</body>