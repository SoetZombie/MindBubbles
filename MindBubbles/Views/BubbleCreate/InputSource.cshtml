@model MindBubbles.Models.BubbleCreateModel

@{
    ViewBag.Title = "InputSource";
}

<body class="col-lg-12">
    <h2>Prosím vložte text k předělání do bublin</h2>

    @using (Html.BeginForm("BubbleCreate", "BubbleCreate", FormMethod.Post))

    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.TextAreaFor(m => m.BaseString, 10, 40, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessageFor(model => model.BaseString, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Submit" />
        </div>
    }

</body>